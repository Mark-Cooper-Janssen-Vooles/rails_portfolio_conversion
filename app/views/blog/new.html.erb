<%= render "pages/nav" %>

<div class="projects-add-form">

  <h3>Create a new blog post!</h3>

  <%= form_with url: "/projects_secret", model: @blog do |f| %>
    <%= f.label :title %> <br>
    <%= f.text_field :title %> <br>

    <%= f.label :date %> <br>
    <%= f.date_field :date %>  <br>

      <%= f.label :image_url %> <br>
    <%= f.text_field :image_url %>  <br>
    
    <%= f.label :hash_tags %> <br>
    <%= f.text_field :hashes %> <br>

    <%= f.label :body_text %> <br>
    <%= f.text_area :body_text %><br>

    <%= f.label :link_to_project %> <br>
    <%= f.text_field :link_url %>  <br>

    <%= f.submit "Submit"%>
  <% end %>
</div>

<div>
  <h3>List of Blogs:</h3>
  <% @blogs.each do |blog| %>
    <p><%=blog.title%></p>
    <p><%= link_to 'Destroy', {action: :destroy, id: blog.id}, method: :delete, data: { confirm: 'Are you sure?' } %></p>
  <% end %>
</div>
